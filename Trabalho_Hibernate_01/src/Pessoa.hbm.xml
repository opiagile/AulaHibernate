<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="Pessoa" table="PESSOAS">
    <id name="id" column="PESSOA_ID">
      <generator class="increment"/>
    </id>
    <property name="nome" type="string" column="NOME"/>
    <property name="sexo" type="string" column="SEXO"/>
    <property name="data_nascimento" type="timestamp" column="DATA_NASCIMENTO"/>
  </class>
</hibernate-mapping>
